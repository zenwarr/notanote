{
  "compilerOptions": {
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ESNext",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "strict": true,
    "declaration": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "lib": [
      "ES5",
      "DOM"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "../common/*"
      ],
      "@storage/*": [
        "../storage/*"
      ],
      "@sync/*": [
        "../sync/*"
      ]
    }
  },
  "include": [
    "./**/*.*"
  ]
}
