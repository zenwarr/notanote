{
  "compilerOptions": {
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ESNext",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "strict": true,
    "declaration": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "removeComments": true,
    "lib": [
      "ES5",
      "DOM"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@common/*": [
        "./common/*"
      ],
      "@storage/*": [
        "./storage/*"
      ],
      "@sync/*": [
        "./sync/*"
      ]
    }
  },
  "exclude": [
    "client/**/*.*",
    "static/**/*.*"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}
