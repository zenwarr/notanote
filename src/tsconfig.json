{
  "compilerOptions": {
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES6",
    "esModuleInterop": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "strict": true,
    "declaration": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "removeComments": true,
    "lib": [
      "ES5",
      "DOM"
    ],
    "jsx": "react-jsx"
  },
  "exclude": [
    "client/**/*.*",
    "static/**/*.*"
  ]
}
